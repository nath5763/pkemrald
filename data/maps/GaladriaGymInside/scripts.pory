script GymLeaderLeaf {
    lock
    faceplayer
    trainerbattle_double(TRAINER_LEAF, LeafIntroText, LeafDefeatText, LeafMoreText, LeafDefeated, NO_MUSIC)
    release
    end
    
}

script LeafDefeated {
    setflag(FLAG_GRASS_GYM)
    msgbox("The Elite 4 awaits...")
    waitmessage
    release
    end
}

script VenusaurTrainer {
    lock
    faceplayer
    if(flag(TRAINER_RED)) {
        call(venesaurDefeat)
    }
    msgbox("Venesaur is slept on!")
    waitmessage
    trainerbattle_single(TRAINER_RED, VenusaurIntro, VenusaurDefeatText, venesaurDefeat)
    msgbox("You still won't beat Leaf!")
    waitmessage
    release
    end
}

script venesaurDefeat {
    msgbox("You still won't beat Leaf!")
    waitmessage
    applymovement(Venesaur, Galadria_Movement_Ven)
    waitmovement
    releaseall
    end
}

